{
  "name": "cerebral",
  "description": "A state controller with its own debugger",
  "main": "src/index.js",
  "scripts": {
    "pretest": "standard",
    "commit": "git-cz",
    "test": "npm run test:cerebral && npm run test:view",
    "test:cerebral": "mocha --compilers js:babel-register 'tests/**/*.js'",
    "test:view": "mocha --compilers js:babel-register 'viewTests/**/*.js'",
    "test:cerebral:watch": "npm run test:cerebral -- --watch",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "build": "babel src/ --out-dir=lib/ -s"
  },
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerebral/cerebral.git"
  },
  "dependencies": {
    "addressbar": "^1.0.2",
    "cerebral-scheme-parser": "^0.1.3",
    "function-tree": "^0.4.6",
    "url-mapper": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.16.3",
    "commitizen": "^2.5.0",
    "cz-customizable": "^4.0.0",
    "cz-customizable-ghooks": "^1.3.0",
    "ghooks": "^1.0.3",
    "jsdom": "^9.5.0",
    "mocha": "^3.1.0",
    "mocha-jsdom": "^1.1.0",
    "nyc": "^8.3.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "standard": "^8.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "ghooks": {
      "commit-msg": "./node_modules/cz-customizable-ghooks/lib/index.js $2"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": "demo"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "tests"
    ]
  },
  "private": true
}
