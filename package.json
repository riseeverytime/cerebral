{
  "name": "cerebral-monorepo",
  "version": "0.0.0",
  "scripts": {
    "setup": "lerna bootstrap",
    "commit": "git-cz",
    "lint": "standard",
    "pretest": "npm run lint && lerna bootstrap",
    "test": "lerna run test",
    "coverage": "lerna run coverage && istanbul-combine -d coverage -p summary -r lcov -r html packages/**/coverage/*.json",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "deploy": "cd packages/website && npm run ci"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.18.0",
    "commitizen": "^2.9.5",
    "coveralls": "^2.11.15",
    "cz-customizable": "^4.0.0",
    "cz-customizable-ghooks": "^1.4.0",
    "ghooks": "^2.0.0",
    "istanbul-combine": "^0.3.0",
    "jsdom": "^9.9.1",
    "lerna": "2.0.0-beta.32",
    "mocha": "^3.2.0",
    "mocha-jsdom": "^1.1.0",
    "nyc": "^10.0.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "standard": "^8.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/cz-customizable-ghooks/lib/index.js $2"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/",
      "**/build/",
      "packages/cerebral-debugger/chromeExtension/prism.js",
      "packages/cerebral-debugger/electron/prism.js"
    ],
    "globals": [
      "block",
      "content",
      "replace",
      "tag",
      "def",
      "applyNext",
      "applyCtx"
    ]
  },
  "private": true,
  "dependencies": {
    "inquirer": "^1.2.3"
  }
}
